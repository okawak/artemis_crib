#!/bin/sh

a() {
    if [ -f .vncdisplay ]; then
        DISPLAY=:`cat .vncdisplay` artemis -l $*
    else
        artemis -l $*
    fi
}


artlogin() {
    export ART_EXP_NAME=${EXP_NAME}

    if [ -e ${HOME}/art_analysis/.conf/${ART_EXP_NAME}.sh ]; then
        source ${HOME}/art_analysis/.conf/${ART_EXP_NAME}.sh
    else
        printf "\33[1martlogin\33[0m: make ${ART_EXP_NAME} environment by using \"artnew\" command.\n"
        return 1
    fi

    source ${HOME}/art_analysis/.conf/artlogin.sh $@
}

artlogin2() {
    export ART_EXP_NAME=${EXP_NAME_OLD}

    if [ -e ${HOME}/art_analysis/.conf/${ART_EXP_NAME}.sh ]; then
        source ${HOME}/art_analysis/.conf/${ART_EXP_NAME}.sh
    else
        printf "\33[1martlogin\33[0m: make ${ART_EXP_NAME} environment by using \"artnew\" command.\n"
        return 1
    fi

    source ${HOME}/art_analysis/.conf/artlogin.sh $@
}


art_usage() {
    cat <<EOF
USAGE:
    1. artlogin


    2. a


    3. art_usage (this)
EOF
}


while (( $# > 0 ))
do
    case $1 in
        -h)
            art_usage
            ;;
        *)
            exit 0
            ;;
    esac
    shift
done
