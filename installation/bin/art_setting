#!/bin/sh

a() {
    if [ -f .vncdisplay ]; then
        DISPLAY=:\`cat .vncdisplay\` artemis -l \$*
    else
        artemis -l \$*
    fi
}


artlogin() {
    if [ -e ${HOME}/art_analysis/.conf/${EXP_NAME}.sh ]; then
        source ${HOME}/art_analysis/.conf/${EXP_NAME}.sh
    else
        printf "\33[1martlogin\33[0m: make ${EXP_NAME} environment by using \"artnew\" command.\n"
        return 1
    fi

    source ${HOME}/art_analysis/.conf/artlogin.sh $@
}

art_usage() {
    cat <<EOF
USAGE:
    1. artlogin


    2. a


    3. art_usage (this)
EOF
}


while (( $# > 0 ))
do
    case $1 in
        -h)
            art_usage
            ;;
        *)
            exit 0
            ;;
    esac
    shift
done
